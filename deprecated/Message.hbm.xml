<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.engine.da.entities">

    <class name="Message" table="MESSAGES">
        <id name="uid" type="java.lang.Integer" column="UID">
            <generator class="increment"/>
        </id>
        <property name="webmailuid" type="java.lang.Long" column="WEBMAIL_UID"/>
        <property name="date" type="java.util.Date" column="DATE"/>
        <property name="content" type="java.lang.String" column="CONTENT"/>
        <property name="flag" type="java.lang.Integer" column="FLAG"/>
    </class>

</hibernate-mapping>